<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.dataTables.js"></script>
    <script src="/js/jquery.cookie.js"></script>
    <script src="/js/jquery.storageapi.js"></script>
    <script src="/js/jquery.simplemodal.js"></script>
    <script src="/js/underscore.js"></script>
    <script src="/lib/d3/d3.js"></script>
    <script src="/js/d3.layout.cloud.js"></script>

    <link rel="shortcut icon" href="/ico/favicon.ico">

    <title>Gramene Web Tools</title>

    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="/css/jquery.tocify.css" rel="stylesheet" />
    <link href="/css/jquery.modal.css" rel="stylesheet" />
    <link href="/css/grm-style.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />

    <link rel="search" type="application/opensearchdescription+xml" href="http://tools.gramene.org/opensearch.xml" title="Gramene Search" />

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-1624628-5', 'gramene.org');
    ga('send', 'pageview');

  </script>

  <script>
    // ------------------------------------------
    function empty_cart () {
    // ------------------------------------------
      $.post( 
        "[% config.url_base %][% c.url_for('/cart/empty') %]",
        { user_id: "[% session.user_id %]" }
      );

      update_cart();
    }

    // ------------------------------------------
    function update_cart(data, add) {
    // "data" could be one record or an array
    // "add" is whether to add or remove the data
    // ------------------------------------------
      if ( data != undefined ) {
        if ( typeof(data) == 'string' ) {
          var id = data;
          data = [ id ];
        }

        $.ajax({
          url: "[% config.url_base %][% c.url_for('/cart/edit') %]",
          data: {
            items: data.join(','),
            action: add ? 'add' : 'remove',
          },
          dataType: 'json',
          type: 'POST',
          error: function (jqXHR, textStatus, errorThrown) {
            alert(
              'Error adding data to cart: '
              + textStatus + ' (' + errorThrown + ')'
            );
          }
        });
      }

      $.get( 
        "[% config.url_base %][% c.url_for('/cart/count') %]",
        function (data) {
          $('#cart_count').text( data.cart_count.toLocaleString() )
        }
      );
    }

    $(document).ready( function() {
      update_cart();
    });
  </script>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <a href="http://www.gramene.org"><img src="/img/gramene_logo.png"></a>
        [% IF title %]<span class="pull-right"><h1>[% title %]</h1></span>[% END %]

        <span class="pull-right">
          <a href="/cart/view"><img src="/img/cart.png"><span id="cart_count" class="badge"></span></a>
          <a href="javascript:empty_cart();"><span class="glyphicon glyphicon-remove-sign"></span></a>
        </div>
      </div>
    </div> <!-- /container -->

    <div class="container">
      [% content %]
    </div>
  </body>
</html>

