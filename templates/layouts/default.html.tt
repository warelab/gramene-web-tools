  <script>
    // ------------------------------------------
    function unique(arr) {
    // ------------------------------------------
      var hash = {}, result = [];
      for ( var i = 0, l = arr.length; i < l; ++i ) {
        if ( 
          arr[i] != undefined && arr[i] != '' && !hash.hasOwnProperty(arr[i]) 
        ) {
          hash[ arr[i] ] = true;
          result.push(arr[i]);
        }
      }

      return result;
    }

    // ------------------------------------------
    function empty_cart () {
    // ------------------------------------------
      $.localStorage.remove('cart');
      update_cart();
    }

    // ------------------------------------------
    function update_cart (record, add) {
    // ------------------------------------------
      var cart   = [];
      var storage = $.localStorage;
      var items   = storage.get('cart');

      if ( items != undefined ) {
        cart = items.split(',');
      }

      if ( record != undefined ) {
        if ( add ) {
          cart.push( record );
        }
        else { // remove
          cart = jQuery.grep( cart, function (n, i) {
            return ( n != record );
          });
        }

        cart = unique(cart);

        storage.set( 'cart', cart.join(',') );
      }

      $('#cart_count').text(cart.length);
    }

    $(document).ready( function() {
      update_cart();
    });
  </script>
