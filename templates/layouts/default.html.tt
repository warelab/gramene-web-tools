  <script>
    // ------------------------------------------
    function unique(arr) {
    // ------------------------------------------
      var hash = {}, result = [];
      for ( var i = 0, l = arr.length; i < l; ++i ) {
        if ( 
          arr[i] != undefined 
          && arr[i] != '' 
          && !hash.hasOwnProperty(arr[i]['id']) 
        ) {
          hash[ arr[i]['id'] ] = true;
          result.push(arr[i]);
        }
      }

      return result;
    }

    // ------------------------------------------
    function empty_cart () {
    // ------------------------------------------
      $.localStorage.remove('cart');
      update_cart();
    }

    // ------------------------------------------
    function update_cart (data, add) {
    // "data" could be one record or an array
    // "add" is whether to add or remove the data
    // ------------------------------------------
      console.log('adding data = ', data);
      var storage = $.localStorage;
      var cart    = storage.get('cart') || [];

      if ( data != undefined ) {
        if ( add ) {
          if ( $.isArray(data) ) {
            data.forEach( function (item) { cart.push( item ) } );
            //cart.push.apply( cart, data );
          }
          else {
            cart.push( data );
          }
        }
        else { // remove, can only remove one at a time
          cart = $.grep( cart, function (n, i) {

            var id = typeof(data) === 'string' ? data : data['id'];

            return ( n['id'] != id );
          });
        }

        cart = unique(cart);

        storage.set( 'cart', cart );
      }

      $('#cart_count').text(cart.length.toLocaleString());
    }

    $(document).ready( function() {
      update_cart();
    });
  </script>
